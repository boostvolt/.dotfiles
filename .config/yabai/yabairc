#!/usr/bin/env sh

# Skip scripting addition if SIP is enabled
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# Basic window management (works without SIP)
yabai -m config layout float
yabai -m config window_gap 6

# Reasonable opacity settings
yabai -m config window_opacity on

# Arc window rules
yabai -m rule --add app="Arc" opacity=0.1
yabai -m signal --add event=window_focused app="^Arc$" action="yabai -m window --opacity 0.08"
yabai -m signal --add event=window_blurred app="^Arc$" action="yabai -m window --opacity 0.01"
