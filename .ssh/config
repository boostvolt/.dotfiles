# General
Host *
  IgnoreUnknown UseKeychain
  User git
  IdentityAgent ~/.1password/agent.sock
  IdentitiesOnly yes
  UseKeychain yes
  AddKeysToAgent yes

# GitHub
Host github.com
 IdentityFile ~/.ssh/id_github.pub
 UserKnownHostsFile ~/.ssh/known_hosts_github

# ZHAW
Host github.zhaw.ch
 IdentityFile ~/.ssh/id_zhaw.pub
 UserKnownHostsFile ~/.ssh/known_hosts_zhaw
