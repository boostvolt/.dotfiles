# General
Host *
  IgnoreUnknown UseKeychain
  User git
  IdentitiesOnly yes
  UseKeychain yes
  AddKeysToAgent yes

# GitHub
Host github.com
 IdentityFile ~/.ssh/id_github
 UserKnownHostsFile ~/.ssh/known_hosts_github

# ZHAW
Host github.zhaw.ch
 IdentityFile ~/.ssh/id_zhaw
 UserKnownHostsFile ~/.ssh/known_hosts_zhaw
