 User git
 IdentityAgent ~/.1password/agent.sock
 IdentityFile ~/.ssh/id_zhaw.pub
 UserKnownHostsFile ~/.ssh/known_hosts_zhaw
 IdentitiesOnly yes  
 UseKeychain yes
 AddKeysToAgent yes
