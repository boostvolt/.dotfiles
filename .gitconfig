[user]
	email = 51777660+boostvolt@users.noreply.github.com
	signingkey = ~/.ssh/id_github.pub

[core]
	excludesFile = ~/.gitignore
	# Case-sensitive filenames
	ignorecase = false
	# Keep macOS Unicode form
	precomposeunicode = false
	# Speed up git status
	untrackedCache = true
	# Use delta for diffs
	pager = delta

[init]
	defaultBranch = main

[commit]
	# Sign all commits
	gpgsign = true

[gpg]
	# Use SSH keys for signing
	format = ssh

[merge]
	# Show original in conflicts
	conflictStyle = zdiff3

[rebase]
	# Auto-apply --squash commits
	autosquash = true

[fetch]
	# Remove stale remote branches
	prune = true

[push]
	# Auto-setup remote tracking
	autoSetupRemote = true
	# Push related tags
	followTags = true

[help]
	# Auto-correct typos
	autocorrect = 1

[interactive]
	diffFilter = delta --color-only

[delta]
	syntax-theme = GitHub
	navigate = true
	side-by-side = true
	hyperlinks = true
	hyperlinks-file-link-format = "vscode://file/{path}:{line}"

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
